@model IEnumerable<IvyMovies.Data.Entities.Director>
@{
    ViewData["Title"] = "Index";
}

<h1>Director List</h1>

<div class="custom-container">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th colspan="3">
                    <a asp-action="Create" class="btn btn-success btn-block">Create New Director</a>
                </th>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DirectorName)
                </th>
                <th></th>
                @*<th style="width: 40%;">
                    @Html.DisplayNameFor(model => model.DirectorBirthDate)
                </th>*@
                <th colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DirectorName)
                    </td>
                    <td>

                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.DirectorBirthDate)
                    </td>*@
                   

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DirectorId" class="btn btn-block btn-primary"> &nbsp; Edit</a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.DirectorId" class="btn btn-block btn-info"> &nbsp; Details</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.DirectorId" class="btn btn-block btn-danger"> &nbsp; Delete </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

